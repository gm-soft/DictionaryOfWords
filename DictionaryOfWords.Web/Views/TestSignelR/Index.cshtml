
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>ASP.NET</h1>
    <p class="lead">SignalR ProcessBar Simple Example</p>
    <button onclick="StartProcess1()" type="button" class="btn btn-primary btn-success">Start the process</button>

</div>

<div id="greyProgress">
    <div id="greenBar">10%</div>
</div>
<br>
<button onclick="move()">Пуск</button>

<script src="~/js/signalr.min.js"></script>
<script type="text/javascript">

    //CALLING METHOD IN THE CONTROLLER TO DO SOME WORK
    function StartProcess1() {

        $.getJSON("/TestSignelR/LongRunningProcess",
            {},
            function (data) {
                if (!data) {
                    alert("Success");
                }
                else {
                    alert(data);
                }
            }
        );
    }

</script>